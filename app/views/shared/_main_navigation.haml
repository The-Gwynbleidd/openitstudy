%nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %button{:type=>"button", :class=>"navbar-toggle", "data-toggle"=> "collapse", "data-target"=>"#navbar"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to landing_path, class:"navbar-brand" do
        Open It Study
    %div.collapse.navbar-collapse#navbar
      %ul.nav.navbar-nav
        %li
          = link_to dashboard_path do
            %i.fa.fa-home
            Home
        %li
          = link_to users_path do
            %i.fa.fa-users
              Users
      %ul.nav.navbar-nav.navbar-right
        -if user_signed_in?
          %li.dropdown
            =link_to "#", class:"dropdown-toggle", "data-toggle"=>"dropdown", "role"=>"button", "aria-haspopup"=>"true", "aria-expanded"=>"false" do
              = image_tag(current_user.avatar.url(:thumb), class:"img img-responsive img-circle avatar pull-left")
              = current_user.email
              %span.caret
            %ul.dropdown-menu
              %li
                =link_to edit_user_registration_path do
                  %i.fa.fa-cogs
                  Settings
              <li role="separator" class="divider"></li>
              %li
                =link_to destroy_user_session_path, :method => :delete do
                  %i.fa.fa-sign-out
                  Log out
        -else
          %li
            = link_to new_user_session_path do
              %i.fa.fa-sign-in
              Log In
          %li
            = link_to new_user_registration_path do
              %i.fa.fa-user-plus
              Sign Up
